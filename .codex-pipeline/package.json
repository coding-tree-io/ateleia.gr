{
  "name": "codex-web-design-pipeline",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup:browsers": "playwright install chromium",
    "tokens:verify-sync": "node scripts/verify-token-sync.mjs",
    "tokens:build": "style-dictionary build --config style-dictionary.config.mjs",
    "storybook": "npm run tokens:build && storybook dev -p 6006 -c .storybook",
    "storybook:build": "npm run tokens:build && storybook build -c .storybook -o storybook-static",
    "a11y:test": "playwright test tests/a11y.spec.ts",
    "visual:test": "playwright test tests/visual.spec.ts",
    "visual:update": "playwright test tests/visual.spec.ts --update-snapshots",
    "visual:promote-devtools": "node scripts/promote-devtools-screenshot.mjs",
    "verify:all": "npm run tokens:verify-sync && npm run tokens:build && npm run storybook:build && npm run a11y:test && npm run visual:test"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-onboarding": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "axe-core": "^4.11.1",
    "playwright": "^1.58.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "storybook": "^10.2.8",
    "style-dictionary": "^5.3.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "ateleia.gr": "file:.."
  }
}
