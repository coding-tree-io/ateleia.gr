---
import { Button } from '@/components/ui/button';
import { createLogoImageUrl } from '@/config/site-branding';
import { therapyPracticeWebsiteContent } from '@/content/therapy-practice-website-content';
import { MobileNavigationMenu } from '@/components/sections/MobileNavigationMenu';
import { ThreadedAlphaWordmark } from '@/components/brand/ThreadedAlphaWordmark';

const {
  brandName,
  brandSubtitle,
  navigationItems,
  hero: { primaryCta },
} = therapyPracticeWebsiteContent;

const logoImageUrl = createLogoImageUrl();
---

<header class="sticky top-0 z-50 border-b border-border/45 bg-background/90 shadow-sm">
  <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-3.5 sm:px-6 md:px-10">
    <a href="#hero" class="group flex min-h-11 min-w-0 items-center gap-3 py-0.5" aria-label="Αρχική">
      <img
        src={logoImageUrl}
        alt="Λογότυπο Ατέλεια"
        class="h-10 w-16 shrink-0 rounded-lg border border-border/60 bg-card/85 object-contain px-1 shadow-sm"
      />
      <div class="min-w-0">
        <ThreadedAlphaWordmark className="text-xl sm:text-2xl" />
        <span class="hidden truncate text-[11px] tracking-[0.12em] text-muted-foreground sm:inline">
          {brandSubtitle}
        </span>
      </div>
    </a>

    <nav class="hidden items-center gap-7 md:flex" aria-label="Κύρια πλοήγηση">
      {navigationItems.map((navigationItem) => (
        <a
          href={navigationItem.href}
          class="relative inline-flex min-h-11 items-center px-1.5 text-sm font-semibold text-muted-foreground transition-colors duration-300 hover:text-foreground after:absolute after:bottom-1 after:left-1.5 after:h-px after:w-0 after:bg-primary after:transition-all after:duration-300 hover:after:w-[calc(100%-0.75rem)]"
        >
          {navigationItem.label}
        </a>
      ))}
    </nav>

    <Button asChild className="hidden rounded-full px-6 md:inline-flex">
      <a href="#contact">{primaryCta}</a>
    </Button>

    <MobileNavigationMenu
      client:media="(max-width: 767px)"
      brandName={brandName}
      brandSubtitle={brandSubtitle}
      primaryActionLabel={primaryCta}
      navigationEntries={navigationItems}
    />
  </div>
</header>
