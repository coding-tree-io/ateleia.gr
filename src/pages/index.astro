---
import '@/styles/global.css';

import { ExampleIsland } from '@/components/ExampleIsland';
import { Button } from '@/components/ui/button';

const baseUrl = import.meta.env.BASE_URL;
const normalizedBaseUrl = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
const faviconSvgUrl = `${normalizedBaseUrl}favicon.svg`;
const faviconIcoUrl = `${normalizedBaseUrl}favicon.ico`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconSvgUrl} />
    <link rel="icon" href={faviconIcoUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>Base Astro + shadcn-ui</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <main class="mx-auto flex min-h-screen w-full max-w-2xl flex-col justify-center gap-8 px-6 py-16">
      <header class="space-y-2">
        <p class="text-xs uppercase tracking-[0.2em] text-muted-foreground">Starter</p>
        <h1 class="text-3xl font-semibold tracking-tight">Astro + shadcn-ui baseline</h1>
        <p class="text-sm text-muted-foreground">
          This page proves static Astro rendering, shadcn styling, and React island hydration.
        </p>
      </header>

      <section class="flex flex-wrap items-center gap-3">
        <Button>shadcn Button</Button>
        <Button variant="secondary">Secondary</Button>
      </section>

      <section class="space-y-3 rounded-lg border border-border p-4">
        <h2 class="text-sm font-medium">Astro island demo</h2>
        <ExampleIsland client:load />
      </section>
    </main>
  </body>
</html>
