---
import '@/styles/global.css';

import { HomePageScaffold } from '@/components/home/HomePageScaffold';
import { approvedTheme } from '@/config/approved-theme';

const baseUrl = import.meta.env.BASE_URL;
const normalizedBaseUrl = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
const faviconSvgUrl = `${normalizedBaseUrl}favicon.svg`;
const faviconIcoUrl = `${normalizedBaseUrl}favicon.ico`;
---

<html lang="el">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconSvgUrl} />
    <link rel="icon" href={faviconIcoUrl} />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Ατέλεια — συμβουλευτική και ψυχοθεραπεία με έμφαση στη δημιουργική έκφραση και την ανθρώπινη σύνδεση."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link href={approvedTheme.typography.stylesheetUrl} rel="stylesheet" />
    <title>Ατέλεια | Συμβουλευτική και Ψυχοθεραπεία</title>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <HomePageScaffold baseUrl={normalizedBaseUrl} />
  </body>
</html>
