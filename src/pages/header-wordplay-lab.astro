---
import '@/styles/global.css';

import { HeaderWordplayLab as HeaderWordplayLabView } from '@/components/brand/HeaderWordplayLab';
import { approvedTheme } from '@/config/approved-theme';
---

<html lang="el">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#C7392E" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Εργαστήριο λεκτικού σήματος για το (α)τέλεια: συγκριτική επισκόπηση header variants." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link href={approvedTheme.typography.stylesheetUrl} rel="stylesheet" />
    <title>(α)τέλεια | Header Wordplay Lab</title>
  </head>
  <body class="min-h-screen overflow-x-clip bg-background text-foreground">
    <HeaderWordplayLabView />
  </body>
</html>
