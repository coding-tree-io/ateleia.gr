---
import '@/styles/global.css';

import { DesignLabIsland } from '@/components/DesignLabIsland';

const baseUrl = import.meta.env.BASE_URL;
const normalizedBaseUrl = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
const faviconSvgUrl = `${normalizedBaseUrl}favicon.svg`;
const faviconIcoUrl = `${normalizedBaseUrl}favicon.ico`;
---

<html lang="el">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={faviconSvgUrl} />
    <link rel="icon" href={faviconIcoUrl} />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Interactive lab for palette and Greek typography exploration using Astro islands and shadcn components."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700&family=Noto+Sans:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>Design Lab | Ateleia</title>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <main class="mx-auto w-full max-w-7xl px-4 py-8 md:px-6 md:py-12">
      <header class="mb-6 space-y-2 md:mb-8">
        <p class="text-xs uppercase tracking-[0.2em] text-muted-foreground">Preview Workspace</p>
        <h1 class="text-2xl font-semibold tracking-tight md:text-4xl">Palette + Typography Test Bench</h1>
        <p class="max-w-3xl text-sm leading-relaxed text-muted-foreground md:text-base">
          Δοκίμασε πολλαπλές παλέτες και γραμματοσειρές σε πραγματικά blocks που θα χρησιμοποιηθούν στο τελικό site
          (hero, υπηρεσίες, FAQ, φόρμα επικοινωνίας, CTA bands).
        </p>
      </header>

      <DesignLabIsland client:load />
    </main>
  </body>
</html>
